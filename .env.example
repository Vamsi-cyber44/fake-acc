# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in the values

# ========== SERVER CONFIGURATION ==========
SERVER_PORT=5000
SERVER_HOST=localhost
NODE_ENV=development

# ========== DATABASE ==========
# Local Development
MONGODB_URI=mongodb://localhost:27017/fake-account-detector

# Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fake-account-detector?retryWrites=true&w=majority

DATABASE_NAME=fake-account-detector

# ========== FRONTEND API ==========
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# ========== APPLICATION INFO ==========
VITE_APP_NAME=Fake Account Detector
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ========== JWT CONFIGURATION ==========
JWT_SECRET=your-secret-key-here
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRY=30d

# ========== SESSION ==========
SESSION_SECRET=your-session-secret-here

# ========== CORS ==========
CORS_ORIGIN=http://localhost:5173

# ========== LOGGING ==========
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ========== EMAIL ==========
EMAIL_SERVICE=gmail|sendgrid|aws-ses
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_API_KEY=your-sendgrid-api-key

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ========== CACHING ==========
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ========== EXTERNAL APIS ==========
INSTAGRAM_API_KEY=your-key
TWITTER_API_KEY=your-key
FACEBOOK_API_KEY=your-key

# ========== MONITORING ==========
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# ========== AWS STORAGE ==========
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret
S3_BUCKET_NAME=your-bucket

# ========== SECURITY ==========
HTTPS=false
HELMET_ENABLED=true
CSP_ENABLED=true
