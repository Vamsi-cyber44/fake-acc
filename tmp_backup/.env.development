# Development Environment Configuration

# Server
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=30000
NODE_ENV=development

# Frontend
VITE_APP_NAME=Fake Account Detector
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Backend Server Settings
SERVER_PORT=5000
SERVER_HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/fake-account-detector
DATABASE_NAME=fake-account-detector

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production-12345
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRY=30d

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/development.log

# Email Configuration (optional for dev)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# External APIs (optional)
INSTAGRAM_API_KEY=your-instagram-api-key
TWITTER_API_KEY=your-twitter-api-key
FACEBOOK_API_KEY=your-facebook-api-key
