# Production Environment Configuration
# NOTE: NEVER commit this file to git. Use secure secrets management instead.

# Server
VITE_API_BASE_URL=https://api.fake-account-detector.com
VITE_API_TIMEOUT=30000
NODE_ENV=production

# Frontend
VITE_APP_NAME=Fake Account Detector
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Backend Server Settings
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fake-account-detector?retryWrites=true&w=majority
DATABASE_NAME=fake-account-detector

# JWT Configuration - Use strong secrets in production
JWT_SECRET=generate-strong-random-secret-min-32-chars
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=generate-strong-random-refresh-secret
JWT_REFRESH_EXPIRY=7d

# CORS Settings
CORS_ORIGIN=https://fake-account-detector.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

# Email Configuration
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@fake-account-detector.com

# Session Configuration
SESSION_SECRET=generate-strong-random-session-secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Settings
REDIS_URL=redis://:password@redis-host:6379
CACHE_TTL=3600

# External APIs
INSTAGRAM_API_KEY=production-instagram-api-key
TWITTER_API_KEY=production-twitter-api-key
FACEBOOK_API_KEY=production-facebook-api-key

# Monitoring & Error Tracking
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Backup & Storage
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET_NAME=fake-account-detector-reports

# Security
HTTPS=true
HELMET_ENABLED=true
CSP_ENABLED=true
